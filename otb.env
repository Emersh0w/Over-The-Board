# ===============================
# Over The Board - Example .env
# ===============================

# -------------------------------
# Ambiente / Network
# -------------------------------
# Porta usada pelo FastAPI/Uvicorn
PORT=8000

# URL base da aplicação
# Local: http://localhost:8000
# Render: https://over-the-board.onrender.com
# Codespaces: use gerada automaticamente (ou defina manualmente)
BASE_URL=http://localhost:8000

# Ativa/desativa debug
DEBUG=false

# -------------------------------
# API Metadata
# -------------------------------
APP_NAME="Over the Board"
VERSION=1.0.3

# -------------------------------
# Rate Limiting
# -------------------------------
# Número máximo de requisições permitidas
RATE_LIMIT_REQUESTS=100
# Janela de tempo em segundos
RATE_LIMIT_WINDOW=60

# -------------------------------
# Cache TTL (tempo de vida em segundos)
# -------------------------------
CACHE_TTL_DEFAULT=300
CACHE_TTL_TOURNAMENTS=300
CACHE_TTL_PLAYERS=600
CACHE_TTL_NEWS=180

# -------------------------------
# HTTP Requests
# -------------------------------
HTTP_TIMEOUT=30

# -------------------------------
# Logging
# -------------------------------
LOG_LEVEL=INFO
LOG_FILE=chess_api.log

# -------------------------------
# Render (auto detectado)
# -------------------------------
# Defina se estiver rodando no Render
# RENDER=true
